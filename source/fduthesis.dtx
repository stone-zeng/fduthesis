\cs_new:Npn \@@_fn_symbol_pifont_sans_negative:n #1
  { \ding { \int_eval:n { 201 + #1 } } }
%    \end{macrocode}
% \end{macro}
%
% \begin{macro}{\@@_fn_symbol_xits:n}
% |xits| 普通版。\numrange{1}{9} 为数字，\numrange{10}{35} 为小写
% 英文字母，\numrange{36}{61} 为大写英文字母。
