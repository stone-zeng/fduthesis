%   \begin{syntax}
%     footnotestyle = <plain|libertinus|libertinus*|libertinus-sans|
% \hspace{2.79cm}pifont|pifont*|pifont-sans|pifont-sans*|
% \hspace{2.79cm}xits|xits-sans|xits-sans*>
%   \end{syntax}
